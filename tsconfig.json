{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "es6", "es2016.array.include", "es2017.object"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-native",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "strictPropertyInitialization": false,
  },

  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "__mocks__", "path"],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
